#!/bin/bash

# don't put duplicate lines in the history
export HISTCONTROL=ignoredups

# let the history ignore the following commands
export HISTIGNORE="ls:ll:la:pwd:clear:h:j"

# Make ls & grep pretty
export CLICOLOR=1
export GREP_OPTIONS='--color=auto'

# use vim as default editor
export EDITOR=vim

# Make phpUnit pretty
alias phpunit='phpunit --colors'

# make ls pretty on ubuntu
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    #alias dir='dir --color=auto'
    #alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

########################################################################
# PATH
########################################################################

# list the directories we want to add to the PATH variable, if they exist.
paths_to_add=(
  $(brew --prefix)/bin
  "$HOME/.composer/vendor/bin"
  /usr/local/php5/bin
  "$HOME/bin"
  # MySQL
  /usr/local/mysql/bin
  # Homebrew
  /usr/local/{,s}bin
  # System
  /{,s}bin
  /usr/{,s}bin
  # Git
  /usr/local/git/bin
  # .bash folder
  "$HOME/.bash"
  # Others
  /opt/local/bin
  /opt/local/sbin
  # Pear
  /Users/woutersioen/pear/bin
);

# Now implode everything into the new PATH variable.
printf -v PATH "%s:" "${paths_to_add[@]}";
export PATH="${PATH%:}";
